<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MyBottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--        <item name="itemBackground">@color/system</item>-->
        <item name="android:background">@color/app_colour</item>
        <!--        <item name="android:textColor">@color/red</item>-->
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#3580FF</item>
        <item name="colorPrimaryVariant">#3580FF</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="CircularShape" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CalendarDayTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalendarWeekTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#848a94</item>
    </style>
    <style name="Calendar" parent="Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">#3580ff</item>
        <item name="colorControlActivated">#3580ff</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

</resources>